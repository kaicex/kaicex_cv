---
import Layout from '../layouts/Layout.astro';
import ArchiveSlide from '../components/ArchiveSlide.astro';
import ProjectCard from '../components/ProjectCard.astro';
import type { Project, Slide } from '../types';
import slidesData from '../data/slides.json';
import projectsData from '../data/projects.json';

const topSlides: Slide[] = slidesData.topSlides as any;
const bottomSlides: Slide[] = slidesData.bottomSlides as any;
const projects: Project[] = projectsData as any;
---

<Layout 
    title="Kayrat Medeshov - Frontend Developer & Product Designer | Portfolio"
    description="Frontend Developer and Product Designer with 5 years of experience. Specializing in Webflow development, UI/UX design, and creating engaging web experiences. View my portfolio and projects."
>
    <div id="webgl" data-astro-cid-pp7spb2p>
        <canvas data-astro-cid-pp7spb2p></canvas>
    </div>

    <aside class="archive" data-astro-cid-pp7spb2p>
        <div class="slider top" data-astro-cid-pp7spb2p>
            {topSlides.map(slide => <ArchiveSlide slide={slide} />)}
        </div>
        <div class="slider bottom" data-astro-cid-pp7spb2p>
            {bottomSlides.map(slide => <ArchiveSlide slide={slide} />)}
        </div>
    </aside>

    <div id="archive-button" data-astro-cid-ab5ug5lk>
        <a href="#archive" class="open" data-astro-cid-ab5ug5lk>
            {[...Array(7)].map((_, i) => (
                <div 
                    class="card" 
                    style={`transform: rotateY(${i * 51.42857142857142}deg) translate3d(0, 0, 45px) scaleY(var(--scaleY)); --index: ${i};`}
                    data-astro-cid-ab5ug5lk
                ></div>
            ))}
        </a>
        <a href="#" class="close" data-astro-cid-ab5ug5lk>
            <span data-astro-cid-ab5ug5lk>Close</span>
        </a>
    </div>

    <main data-astro-cid-j7pv25f6>
        <section class="home-content" data-astro-cid-j7pv25f6>
            <h1 class="home-headline split h1">Kayrat Medeshov</h1>
            
            <h2 class="home-sub-headline split h2">About</h2>
            <p class="home-about-text split text">
                I am a Frontend Developer, I build value through design. Product Designer with 5 years of experience. 
                Masters Degree in CS. I craft pet projects in my leisure hours.
            </p>

            <h3 class="home-sub-headline split h2">Projects</h3>
            <ul class="projects-nav" data-astro-cid-j7pv25f6>
                {projects.map(project => (
                    <li class="text" data-astro-cid-j7pv25f6>
                        <a href={`#${project.id}`} data-astro-cid-j7pv25f6>
                            <span class="project-icon">
                                <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                                </svg>
                                <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                                </svg>
                            </span>
                            <span class="split">{project.title}</span>
                        </a>
                    </li>
                ))}
            </ul>

            <h2 class="home-sub-headline split h2">Tools & Stack</h2>
            <ul data-astro-cid-j7pv25f6>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">Next.js · React · TypeScript</p>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">Make · N8N · Zapier · Airtable</p>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">Webflow · Wized · Memberstack</p>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">Figma · GSAP · Spline</p>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">HTML · CSS · JS · API Integrations</p>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <p class="split">Optimization and Basic SEO settings</p>
                </li>
            </ul>

            <h2 class="home-sub-headline split h2">Links</h2>
            <ul class="links-list" data-astro-cid-j7pv25f6>
                <li class="text" data-astro-cid-j7pv25f6>
                    <a target="_blank" rel="noopener" href="https://www.t.me/kaicex">
                        <span class="project-icon">
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                        </span>
                        <span class="split">Telegram</span>
                    </a>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <a target="_blank" rel="noopener" href="https://www.behance.net/kaicex">
                        <span class="project-icon">
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                        </span>
                        <span class="split">Behance</span>
                    </a>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <a href="mailto:kayrat.medeshov@gmail.com">
                        <span class="project-icon">
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                        </span>
                        <span class="split">Email</span>
                    </a>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <a target="_blank" rel="noopener" href="/kayrat_medeshov_dev_cv.pdf">
                        <span class="project-icon">
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                        </span>
                        <span class="split">Download CV</span>
                    </a>
                </li>
                <li class="text" data-astro-cid-j7pv25f6>
                    <a target="_blank" rel="noopener" href="https://t.me/cursora">
                        <span class="project-icon">
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                            <svg viewBox="0 0 7 7" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.86995 0.03209L6.88126 6.08492H5.72726L5.77252 1.98936L1.462 6.29989L0.602152 5.44004L4.91268 1.12952L0.817113 1.17477L0.817114 0.0207771L6.86995 0.03209Z"></path>
                            </svg>
                        </span>
                        <span class="split">My Community</span>
                    </a>
                </li>
            </ul>
        </section>

        <div id="project-close" data-side="left" data-astro-cid-yrg7gwqs>
            <p class="text" data-astro-cid-yrg7gwqs>Close</p>
        </div>

        {projects.map(project => <ProjectCard project={project} />)}
    </main>
</Layout>

